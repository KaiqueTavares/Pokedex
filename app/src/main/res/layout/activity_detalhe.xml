<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalheActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#150 MewTwo"
        style="@style/label_detail"/>

    <!--CardView utilizado para fazer a borda-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/mewtwo"/>

    </android.support.v7.widget.CardView>

    <TextView
        style="@style/label_detail"
        android:text="@string/label_description"/>

    <!--FAZENDO A LINHA COM O COMPONENTE VIEW-->
    <view
        style="@style/divider"></view>

    <TextView
        style="@style/label_description"
        android:text="bla bla bla" />

    <view
        style="@style/divider"></view>

    <TextView
        style="@style/label_detail"
        android:text="@string/label_abilities"/>

    <view
        style="@style/divider"></view>

    <LinearLayout
        style="@style/container_abilities">

        <LinearLayout
            style="@style/container_abilities_child">

            <TextView
                style="@style/abilities_title"/>

            <TextView
               style="@style/abilities_subtitle"
                android:text="@string/label_hp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/container_abilities_child">

            <TextView
                style="@style/abilities_title"/>

            <TextView
                style="@style/abilities_subtitle"
                android:text="@string/label_speed"/>
        </LinearLayout>


    </LinearLayout>

    <view
        style="@style/divider"></view>

    <LinearLayout
        style="@style/container_abilities">

        <LinearLayout
            style="@style/container_abilities_child">

            <TextView
                style="@style/abilities_title"/>

            <TextView
                style="@style/abilities_subtitle"
                android:text="@string/label_attack"/>
        </LinearLayout>

        <LinearLayout
            style="@style/container_abilities_child">

            <TextView
                style="@style/abilities_title"/>

            <TextView
                style="@style/abilities_subtitle"
                android:text="@string/label_defense"/>
        </LinearLayout>


    </LinearLayout>

    <view
        style="@style/divider"></view>

</LinearLayout>